---
import { Image } from "astro:assets";
import Layout from "../layouts/Layout.astro";
import mountainSVG from "/public/mountains.svg";
import IntroComponent from "../components/IntroComponent";
---

<Layout title="Learning">
  <div class="w-screen h-screen">
    <IntroComponent
      title="Learning"
      subtitle="Trove Of Knowledge"
      client:load
    />

    <div class="flex justify-center items-center -mt-40 h-screen">
      <div class="flex flex-col">
        <Image src={mountainSVG} alt="mountains" />
        <div class="font-note text-4xl flex justify-center items-center">
          Page Under Construction....
        </div>
      </div>
    </div>
  </div>
</Layout>
